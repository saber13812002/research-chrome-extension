{
  "name": "social_messenger_helper_chrome_extension",
  "version": "1.0.3",
  "description": "content producer helper for messenger channel admins",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "storage"
  ],
  "icons": {
    "128": "icon.png"
  },
  "content_scripts": [{
    "matches": [
      "https://*.aparat.com/*",
      "https://*.google.com/*",
      "https://*.stackoverflow.com/*",
      "https://*.youtube.com/*",
      "https://*.virgool.io/*"
    ],
    "js": [
      "common.js",
      "main.js"
    ]
  }]
}