{
  "name": "social_messenger_helper_chrome_extension",
  "version": "1.0.1",
  "description": "content producer helper for messenger channel admins",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": ["bookmarks", "storage"],
  "content_scripts": [{
    "matches": [
      "https://*.aparat.com/*",
      "https://*.google.com/*",
      "https://*.stackoverflow.com/*",
      "https://*.youtube.com/*"
    ],
    "js": [
      "common.js",
      "main.js"
    ]
  }]
}